				<TextView
					android:id="@+id/clock_land"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/land_income"
					android:layout_toEndOf="@+id/buy_land"
					android:background="@drawable/clock_icon"
					/>

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="wrap_content"
