					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignBottom="@id/sheep_icon"
					android:background="@drawable/category_count"
					android:gravity="center"
					android:text="102"
					android:textColor="@android:color/white"
					/>

				<Button
					android:id="@+id/buy_sheep"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/sheep_income"
					android:layout_toEndOf="@+id/sheep_icon"
					android:background="@drawable/buy_button"
					/>


				<TextView
					android:id="@+id/sheep_income"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentTop="true"
					android:layout_marginEnd="14dp"
					android:layout_toEndOf="@+id/sheep_icon"
