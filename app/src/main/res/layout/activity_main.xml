				<TextView
					android:id="@+id/factory_counter"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignBottom="@id/factory_icon"
					android:background="@drawable/category_count"
					android:gravity="center"
					android:text="102"
					android:textColor="@android:color/white"
					/>

				<Button
					android:id="@+id/buy_factory"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/factory_income"
					android:layout_toEndOf="@+id/factory_icon"
					android:background="@drawable/buy_button"
