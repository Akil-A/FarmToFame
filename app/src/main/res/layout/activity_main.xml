<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	          android:id="@+id/activity_main_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#0099cc"
	android:orientation="vertical"
	android:gravity="center"
	tools:context="no.pxpdev.farmtofame.MainActivity"
	>

	<TextView
		android:id="@+id/total_money"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:text="@string/moneyz"
		android:textSize="15pt"
		android:layout_marginBottom="12dp"
		/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:paddingLeft="30dp"
			>

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="6dp"
				android:paddingLeft="20dp"
				android:paddingTop="6dp"
				>

				<ImageView
					android:id="@+id/farmer_icon"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_alignParentTop="true"
					android:background="@drawable/farmer_icon"
					/>
				<TextView
					android:id="@+id/farmer_counter"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignBottom="@id/farmer_icon"
					android:background="@drawable/category_count"
					android:gravity="center"
					android:text="102"
					android:textColor="@android:color/white"
					/>

				<Button
					android:id="@+id/buy_farmer"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/farmer_income"
					android:layout_toEndOf="@+id/farmer_icon"
					android:background="@drawable/buy_button"
					/>


				<TextView
					android:id="@+id/farmer_income"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentTop="true"
					android:layout_marginEnd="14dp"
					android:layout_toEndOf="@+id/farmer_icon"
					android:background="@drawable/income_icon"
					android:gravity="center"
					android:textColor="@android:color/white"
					/>

				<TextView
					android:id="@+id/clock_farmer"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/farmer_income"
					android:layout_toEndOf="@+id/buy_farmer"
					android:background="@drawable/clock_icon"
					/>

			</RelativeLayout>


			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingBottom="6dp"
				android:paddingLeft="20dp"
				android:paddingTop="6dp"
				>

				<ImageView
					android:id="@+id/factory_icon"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_alignParentTop="true"
					android:background="@drawable/factory_icon"
