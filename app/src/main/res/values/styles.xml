<resources>

    <style name="Theme.App" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.App.Fullscreen" parent="Theme.App">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.MainActivity" parent="Theme.App.Fullscreen">
        <item name="buttonStyle">@style/Widget.App.ButtonMain</item>
    </style>

    <style name="Widget.App.ButtonMain" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingLeft">@dimen/main_button_padding</item>
        <item name="android:paddingRight">@dimen/main_button_padding</item>
    </style>

</resources>
